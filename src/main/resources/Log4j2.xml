<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
  <Appenders>
    <!-- File Appender -->
    <File name="LogToFile" fileName="app.log">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>

  <Loggers>
    <!-- Logger for your application -->
    <Logger name="web" level="debug" additivity="false">
      <AppenderRef ref="LogToFile"/>
    </Logger>

    <!-- Root Logger -->
    <Root level="trace">
      <AppenderRef ref="LogToFile" level="debug"/>
      <AppenderRef ref="LogToFile" level="info"/>
      <AppenderRef ref="LogToFile" level="error"/>
    </Root>
  </Loggers>
</Configuration>